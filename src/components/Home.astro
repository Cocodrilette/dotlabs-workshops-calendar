---
import lineIcon from "../assets/icons/line-title.svg";
import backgroundHomeImage from "../assets/images/background-home.svg";
import { textGradient } from "../utils/constants";
import { t } from "i18next";
---

<section
  id="home"
  class="h-screen min-h-[40rem] lg:min-h-[50rem] flex justify-center"
>
  <img
    src={backgroundHomeImage}
    alt="Background image"
    class="absolute top-0 w-[50rem] h-[50rem] md:w-full md:h-[50rem] lg:h-[75rem] lg:-top-60 object-cover"
  />

  <div class="relative flex flex-col items-center gap-y-4 mt-36">
    <h1
      class={`text-6xl font-extrabold flex flex-col md:flex-row items-center gap-x-3 ${textGradient}`}
    >
      DOTLABS
      <div>
        (MEDELL√çN)
        <img src={lineIcon} alt="Line Icon" class="w-[18rem] ml-7" />
      </div>
    </h1>
    <h2
      class={`text-5xl font-extrabold flex flex-col md:flex-row text-center gap-x-3 ${textGradient}`}
    >
      {t("home.textContent")}
    </h2>
  </div>
</section>
