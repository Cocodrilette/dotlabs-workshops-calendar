---
import { LanguageSelector } from "astro-i18next/components";
import DotlabsLogo from "./DotlabsLogo.astro";
---

<header
  class="h-16 sticky top-0 backdrop-blur-[2px] z-50 border-b-2 border-main"
>
  <div
    class={`flex justify-between items-center mx-auto px-4 h-full relative text-main`}
  >
    <DotlabsLogo />

    <LanguageSelector
      showFlag={true}
      class="cursor-pointer rounded-lg p-1 bg-transparent focus:outline focus:outline-main focus:outline-2"
    />
  </div>
</header>
