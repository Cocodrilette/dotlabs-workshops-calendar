---
import { mainGradient } from "../utils/constants";
import DotlabsLogo from "./DotlabsLogo.astro";
import Socials from "./Socials.astro";
import { t } from "i18next";
---

<footer class={`h-fit ${mainGradient} text-white`}>
  <div
    class="max-w-[55rem] mx-auto flex flex-col gap-11 md:flex-row items-center md:gap-44 px-9 md:px-7 py-14 pb-16"
  >
    <div class="flex flex-col gap-5">
      <DotlabsLogo white={true} bigger={true} />
      <p class="w-full">
        {t("footer.description")}
      </p>
      <Socials white={true} />
    </div>
  </div>
</footer>
