---
import { t } from "i18next";
import arrowIcon from "../assets/icons/arrow.svg";
---

<div id="backToHomeButton" class="fixed hidden bottom-5 w-full z-[100] px-4">
  <a
    href="https://dotlabs.academy/"
    class="inline-flex items-center justify-between bg-main py-1 px-3 text-white rounded-md text-right"
  >
    <img
      src={arrowIcon}
      alt="Arrow back icon"
      class="w-[12px] h-[12px] rotate-90 mr-1"
    />{t("buttons.backToHome")}
  </a>
</div>

<script>
  const backToHomeButton = document.getElementById("backToHomeButton");
  if (document.referrer === "https://dotlabs.academy/") {
    backToHomeButton?.classList.remove("hidden");
  }
</script>
